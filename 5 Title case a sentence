//5. Title case a sentence
//Splits sentence into array of words then
//capitalizes each word. 
function titleCase(str) {
  str = str.toLowerCase();
  var words = str.split(' ');
  var len = words.length;
  for(var i = 0; i < len; i++) {
    words[i] = words[i].charAt(0).toUpperCase() + words[i].slice(1);
  }
  str = words.join(' ');
  return str;
}
